		"cfhttpparam",
		"cfimage",
		"cfimport",
		"cfinclude",
		"cfindex",
		"cfinput",
		"cfinvokeargument",
		"cflocation",
		"cflog",
		"cfloginuser",
		"cflogout",
		"cfmailparam",
		"cfobject",
		"cfobjectcache",
		"cfparam",
		"cfpop",
		"cfprocessingdirective",
		"cfprocparam",

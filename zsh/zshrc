clear

PATH="$PATH:/home/hanna/.local/bin"

# Aliases
alias ls="exa --icons"
alias cat="batcat"
alias cd="z"
alias fd="fdfind"
alias vi="/snap/bin/nvim"

# Autocompletion
autoload -Uz compinit
compinit -D

# Various handy tools
source /usr/share/zsh-autosuggestions/zsh-autosuggestions.zsh
eval "$(zoxide init zsh)"
eval "$(thefuck --alias)"
eval "$(starship init zsh)"
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
